{
  "appId": "com.vestywinbox.app",
  "productName": "VestyWinBox",
  "directories": {
    "output": "release-new"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "assets/icon.ico",
    "assets/icons/**/*",
    "assets/branding/**/*",
    "assets/screens/**/*",
    "!assets/Apps portable/**",
    "!assets/logiciels/**",
    "!assets/ffmpeg/**",
    "node_modules/**/*",
    "package.json"
  ],
  "asarUnpack": [],
  "icon": "assets/icon.ico",
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "VestyWinBox",
    "runAfterFinish": false,
    "menuCategory": "VestyWinBox",
    "deleteAppDataOnUninstall": false,
    "artifactName": "${productName} Setup ${version}.exe",
    "uninstallDisplayName": "VestyWinBox"
  }
}

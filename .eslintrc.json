{
  "root": true,
  "env": { "browser": true, "es2022": true, "node": true },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "release/",
    "assets/",
    "downloads/",
    "electron/",
    "e2e/"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
  "plugins": ["@typescript-eslint", "react", "react-hooks", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "eslint-config-prettier"
  ],
  "settings": { "react": { "version": "detect" } },
  "overrides": [
    {
      "files": ["**/*.js"],
      "parser": "espree",
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": ["electron/**/*.js"],
      "rules": {
        "no-undef": "off",
        "no-console": "off"
      }
    }
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": ["warn"],
    "import/order": "off",
    "react/prop-types": "off",
    "react/jsx-key": "warn",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off",
    "no-useless-escape": "warn",
    "no-empty": ["warn", { "allowEmptyCatch": true }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react-hooks/exhaustive-deps": "warn",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.name='exec'] > TemplateLiteral",
        "message": "Évitez la concaténation de commandes shell. Utilisez spawn avec tableau d'arguments ou une chaîne littérale fixe."
      },
      {
        "selector": "CallExpression[callee.name='exec'] > BinaryExpression[operator='+']",
        "message": "Évitez la concaténation de commandes shell. Utilisez spawn avec tableau d'arguments ou une chaîne littérale fixe."
      }
    ]
  }
}

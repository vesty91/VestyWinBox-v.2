{
  "name": "vestywinbox",
  "version": "1.0.3",
  "description": "Gestionnaire syst√®me Windows moderne avec interface glassmorphism",
  "author": "Vesty",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "electron": "set NODE_ENV=development && electron .",
    "postbuild": "robocopy assets\\icons dist\\assets\\icons /E /NFL /NDL /NJH /NJS /NC /NS /NP & robocopy assets\\branding dist\\assets\\branding /E /NFL /NDL /NJH /NJS /NC /NS /NP & robocopy assets\\screens dist\\assets\\screens /E /NFL /NDL /NJH /NJS /NC /NS /NP & copy /Y assets\\icon.ico dist\\assets\\icon.ico",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:simple": "npm run dev & timeout 3 && electron .",
    "electron:build": "npm run build && electron-builder",
    "build:exe": "npm run build && electron-builder --win",
    "build:portable": "npm run build && electron-builder --win portable",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate:icon": "node scripts/generate-icons.js",
    "e2e": "npm run build && playwright test --config e2e/playwright.config.ts"
  },
  "dependencies": {
    "electron-updater": "^6.2.1",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "espree": "^10.4.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^2.0.5"
  },
  "build": {
    "appId": "com.vestywinbox.app",
    "productName": "VestyWinBox",
    "directories": {
      "output": "release-pub"
    },
    "icon": "assets/icon.ico",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/icon.ico",
      "assets/icons/**/*",
      "assets/branding/**/*",
      "assets/screens/**/*",
      "!assets/Apps portable/**",
      "!assets/logiciels/**",
      "!assets/ffmpeg/**",
      "node_modules/**/*"
    ],
    "asarUnpack": [],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VestyWinBox"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
